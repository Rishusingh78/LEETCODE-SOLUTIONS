class Solution {
public:
    bool isTrionic(vector<int>& nums) {
        int n = nums.size();
        int i = 1;

        
        int inc1 = 0;
        while (i < n && nums[i] > nums[i-1]) {
            i++;
            inc1++;
        }

        
        int dec = 0;
        while (i < n && nums[i] < nums[i-1]) {
            i++;
            dec++;
        }

        
        int inc2 = 0;
        while (i < n && nums[i] > nums[i-1]) {
            i++;
            inc2++;
        }

        return inc1 > 0 && dec > 0 && inc2 > 0 && i == n;
    }
};
