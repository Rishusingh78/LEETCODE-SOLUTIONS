class Solution {
public:
    int numSub(string s) {
        const int MOD = 1e9 + 7;
        long long ans = 0;
        long long cnt = 0;
        
        for (char c : s) {
            if (c == '1') {
                cnt++;
                ans = (ans + cnt) % MOD;
            } else {
                cnt = 0;
            }
        }
        
        return ans;
    }
};
